CREATE DATABASE student_db;
USE student_db;

CREATE TABLE students (
    id INT AUTO_INCREMENT PRIMARY KEY,
    department_name VARCHAR(255) NOT NULL,
    session VARCHAR(50) NOT NULL,
    program VARCHAR(50) NOT NULL,
    discipline VARCHAR(255) NOT NULL,
    registration_no VARCHAR(50),
    title VARCHAR(10) NOT NULL,
    gender VARCHAR(20) NOT NULL,
    first_name VARCHAR(100) NOT NULL,
    last_name VARCHAR(100) NOT NULL,
    middle_name VARCHAR(100),
    date_of_birth DATE NOT NULL,
    fathers_name VARCHAR(200),
    photo_path VARCHAR(255),
    last_degree_name VARCHAR(255) NOT NULL,
    cnic_number VARCHAR(50) NOT NULL,
    marital_status VARCHAR(20) NOT NULL,
    house_no VARCHAR(50) NOT NULL,
    street_address VARCHAR(255) NOT NULL,
    city VARCHAR(100) NOT NULL,
    tehsil VARCHAR(100) NOT NULL,
    district VARCHAR(100) NOT NULL,
    postcode VARCHAR(20) NOT NULL,
    phone_number VARCHAR(50) NOT NULL,
    student_email VARCHAR(255) NOT NULL,
    province VARCHAR(100) NOT NULL,
    country VARCHAR(100) NOT NULL,
    disability VARCHAR(100) NOT NULL,
    temp_house_no VARCHAR(50),
    temp_street_address VARCHAR(255),
    temp_city VARCHAR(100),
    temp_tehsil VARCHAR(100),
    temp_district VARCHAR(100),
    temp_postcode VARCHAR(20),
    temp_phone_number VARCHAR(50),
    temp_province VARCHAR(100),
    temp_country VARCHAR(100),
    emergency_full_name VARCHAR(200) NOT NULL,
    relationship VARCHAR(50) NOT NULL,
    legal_guardian VARCHAR(10) NOT NULL,
    nationality VARCHAR(100) NOT NULL,
    emergency_house_no VARCHAR(50) NOT NULL,
    emergency_street_address VARCHAR(255) NOT NULL,
    emergency_city VARCHAR(100) NOT NULL,
    emergency_tehsil VARCHAR(100) NOT NULL,
    emergency_district VARCHAR(100) NOT NULL,
    emergency_postcode VARCHAR(20),
    emergency_phone_number VARCHAR(50) NOT NULL,
    emergency_province VARCHAR(100) NOT NULL,
    emergency_country VARCHAR(100) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

exit;